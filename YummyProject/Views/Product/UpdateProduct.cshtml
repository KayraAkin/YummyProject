﻿@model YummyProject.Models.Product

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<form method="post">

    @Html.HiddenFor(x => x.ProductId)
    @Html.HiddenFor(x => x.CategoryId)
    <label>Görsel</label>
    @Html.TextAreaFor(x => x.ImageUrl, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.ImageUrl)</div>
    <br />
    <label>Başlık</label>
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Name)</div>
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Ingredients, 1, 4, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Ingredients)</div>
    <br />
    <label>Fiyat</label>
    @Html.TextAreaFor(x => x.Price, 1, 4, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Price)</div>
    <br />

    <div class="text-danger">@ViewBag.error</div>
    <button class="btn btn-primary">Kaydet</button>

</form>

