@model List<YummyProject.Models.Booking>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<h2>Rezervasyon Alanı</h2>
<br />
<br />

<h4>Onaylanan Rezervasyonlar</h4>
<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Telefon Numarası</th>
        <th>Rezervasyon Tarihi</th>
        <th>Kişi Sayısı</th>
        <th>Mesaj Konusu</th>
        <th>Onay Durumu</th>

        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsApproved == true)
        {

            <tr>
                <th>@item.BookingId</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BookingDate</td>
                <td>@item.PersonCount</td>
                <td>@item.MessageContent</td>


                <td>
                    <a href="@Url.Action("ChangeIsApproved", "Booking", new { id = item.BookingId })" class="btn btn-sm btn-success">
                        Onaylandı
                    </a>
                </td>
                <td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    }

</table>
<br />
<h4>Onay Bekleyen Rezervasyonlar</h4>
<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Telefon Numarası</th>
        <th>Rezervasyon Tarihi</th>
        <th>Kişi Sayısı</th>
        <th>Mesaj Konusu</th>
        <th>Onay Durumu</th>

        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsApproved == false)
        {


            <tr>
                <th>@item.BookingId</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BookingDate</td>
                <td>@item.PersonCount</td>
                <td>@item.MessageContent</td>
                <td>
                    <a href="@Url.Action("ChangeIsApproved", "Booking", new { id = item.BookingId })" class="btn btn-sm btn-secondary">
                        Onaylanmadı
                    </a>
                </td>
                <td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    }

</table>