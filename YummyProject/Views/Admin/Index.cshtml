@model List<YummyProject.Models.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Admin Alanı</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>İsim</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AdminId</th>
            <td><img src="@Url.Content(item.ImageUrl)" style="width:50px;height:50px;border-radius:50%;" /></td>

            <td>@item.NameSurname</td>
            <td>@item.UserName</td>
            <td>@item.Password</td>
            <td><a href="/Admin/DeleteAdmin/@item.AdminId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/UpdateAdmin/@item.AdminId" class="btn btn-info">Güncelle</a></td>

        </tr>
    }

</table>
<br />
<a href="/Admin/AddAdmin" class="btn-primary">Yeni Admin Ekle</a>