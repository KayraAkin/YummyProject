@model List<YummyProject.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis alanı</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İkon</th>


        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ServiceId</th>
            <th>@item.Title</th>
            <td>@item.Description</td>
            <td>@item.Icon</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Service/UpdateService" class="btn btn-info">Güncelle</a></td>

        </tr>
    }

</table>
<br />
<a href="/Service/AddService" class="btn-primary">Yeni Servis Ekle</a>