@model YummyProject.Models.Service
@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Servis Ekleme Sayfası</h2>

<form method="post">

    <label>Başlık</label>
    @Html.TextAreaFor(x => x.Title, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Title)</div>
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 1, 4, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Description)</div>
    <br />
    <label>VideoUrl</label>
    @Html.TextAreaFor(x => x.Icon, new { @class = "form-control" })
    <div class="text-danger">@Html.ValidationMessageFor(x => x.Icon)</div>
    <br />

    <div class="text-danger">@ViewBag.error</div>
    <button class="btn btn-primary">Kaydet</button>

</form>

