@model List<YummyProject.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda alanı</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Madde 1</th>
        <th>Madde 2</th>
        <th>Madde 3</th>
        <th>Açıklama</th>
        <th>Video Url</th>
        <th>Telefon Numarası</th>
        <th>Video Resmi</th>
        


        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.AboutId</th>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px" /> </td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Description</td>
            <td>@item.VideoUrl</td>
            <td>@item.PhoneNumber</td>
            <td>@item.ImageUrl2</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
            <td><a href="/About/UpdateAbout" class="btn btn-info">Güncelle</a></td>

        </tr>
    }

</table>
<br />
<a href="/About/AddAbout" class="btn-primary">Yeni Hakkımda Ekle</a>