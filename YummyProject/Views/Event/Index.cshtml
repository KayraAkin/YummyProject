@model List<YummyProject.Models.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Etkinlik Alanı</h2>

<table class="table table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Fiyat</th>

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.EventId</th>
            <td><img src="@Url.Content(item.ImageUrl)" style="width:50px;height:50px" /> </td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td><a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Event/UpdateEvent/@item.EventId" class="btn btn-info">Güncelle</a></td>

        </tr>
    }

</table>
<br />
<a href="/Event/AddEvent" class="btn-primary">Yeni Etkinlik Ekle</a>