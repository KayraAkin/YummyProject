</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Son Eklenen 10 Ürün
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Ürün İsmi</th>
                    <th>İçerik</th>
                    <th>Fiyat</th>
                    <th>Kategori Adı</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Resim</th>
                    <th>Ürün İsmi</th>
                    <th>İçerik</th>
                    <th>Fiyat</th>
                    <th>Kategori Adı</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@Url.Content(item.ImageUrl)" style="width:50px;height:50px" /> </td>
                        <td>@item.Name</td>
                        <td>@item.Ingredients</td>
                        <td>@item.Price</td>
                        <td>@item.Category.CategoryName</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>