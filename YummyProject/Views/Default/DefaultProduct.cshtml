@model List<YummyProject.Models.Category>
<section id="menu" class="menu section">
    @{ 
        int count = 0;
        int count2 = 0;
    }
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Menu</h2>
        <p><span>Check Our</span> <span class="description-title">Yummy Menu</span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
            @foreach (var category in Model)
                    {
                        count++;

            <li class="nav-item">
                <a class="nav-link @(count ==1 ? "active show" : "")" data-bs-toggle="tab" data-bs-target="#menu-@category.CategoryName">
                    <h4>@category.CategoryName</h4>
                </a>
            </li><!-- End tab nav item -->
            }


        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">

            @foreach (var category in Model)
            {

                count2++;

            <div class="tab-pane fade @(count2 ==1 ? "active show" : "")" id="@category.CategoryName">

                <div class="tab-header text-center">
                    <p>Menü</p>
                    <h3>@category.CategoryName</h3>
                </div>

                <div class="row gy-5">

                    @foreach (var product in category.Products)
                    {


                    <div class="col-lg-4 menu-item">
                        <a href="~/Templates/yummy-red-1.0.0/assets/img/menu/menu-item-1.png" class="glightbox"><img src="~/Templates/yummy-red-1.0.0/assets/img/menu/menu-item-1.png" class="menu-img img-fluid" alt=""></a>
                        <h4>@product.Name</h4>
                        <p class="ingredients">
                            @product.Ingredients
                        </p>
                        <p class="price">
                            @product.Price ₺
                        </p>
                    </div><!-- Menu Item -->
                    }


                </div>
            </div><!-- End Starter Menu Content -->
            }


        </div>

    </div>

</section>
