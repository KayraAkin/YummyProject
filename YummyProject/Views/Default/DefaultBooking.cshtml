@model List<YummyProject.Models.Booking>
<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Rezervasyon Yap</h2>
        <p><span class="description-title">Unutulmaz Bir Deneyim İçin Yerinizi Ayırtın<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img" style="background-image:url('@Url.Content("~/Templates/yummy-red-1.0.0/assets/img/reservation.jpg")');"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form action="/Booking/SendMessage" method="post" role="form" class="php-email-form">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="Name" class="form-control" id="name" placeholder="İsim Soyisim" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="email" class="form-control" name="Email" id="email" placeholder="Email" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" name="PhoneNumber" id="phone" placeholder="Telefon Numarası" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="date" name="BookingDate" class="form-control" id="date" placeholder="Tarih" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="time" class="form-control" name="time" id="time" placeholder="saat" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="PersonCount" id="people" placeholder="Kişi sayısı" required="">
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" name="MessageContent" rows="5" placeholder="Mesaj"></textarea>
                    </div>

                    <div class="text-center mt-3">
                        <div class="loading">Yükleniyor</div>
                        <div class="error-message"></div>
                        <div class="sent-message">
                            Rezervasyon talebiniz gönderildi.
                            Rezervasyonunuzu onaylamak için sizi arayacağız veya e-posta göndereceğiz. Teşekkür ederiz!
                        </div>
                        <button type="submit">Rezervasyon Yap</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->

        </div>

    </div>

</section><!-- /Book A Table Section -->