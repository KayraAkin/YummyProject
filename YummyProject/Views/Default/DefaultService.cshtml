@model List<YummyProject.Models.Service>
<section id="why-us" class="why-us section light-background">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="why-box">
                    <h3>Neden Yummy'i Seçmelisiniz</h3>
                    <p>
                        Misafirlerimize sadece yemek değil, unutulmaz bir deneyim sunmayı hedefliyoruz. Lezzet, atmosfer ve hizmetin mükemmel bir uyum içinde buluştuğu restoranımızda, her detay sizin için özenle düşünüldü.
                    </p>
                </div>
            </div><!-- End Why Box -->

            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="row gy-4" data-aos="fade-up" data-aos-delay="200">

                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="@item.Icon"></i>
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div><!-- End Icon Box -->
                    }

                </div>
            </div>

        </div>

    </div>

</section><!-- /Why Us Section -->